#define BASE 0
#define LOWER 1
#define MOUSE_KEYS 2
#define MOUSE_TP 3
#define MOUSE_TP_SET 4

#include <behaviors.dtsi>
#include <dt-bindings/zmk/ext_power.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/rgb.h>

/ {
    behaviors {
        ltq: ltq {
            compatible = "zmk,behavior-hold-tap";
            label = "LTQ";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <180>;
        };
    };

    combos {
        compatible = "zmk,combos";

        flash {
            bindings = <&bootloader>;
            key-positions = <0 11>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        BASE {
            bindings = <
&kp ESC    &kp N1        &kp N2        &kp N3  &kp N4  &kp N5     &kp N6      &kp N7  &kp N8     &kp N9         &kp N0    &kp MINUS  &kp EQUAL  &kp BSPC           &kp DELETE
&kp TAB    &kp Q         &kp W         &kp E   &kp R   &kp T                &led1_act   &led2_act    &kp I          &kp O     &kp P      &kp LBKT   &kp RBKT          &kp BSLH           &rgb_ug RGB_ON
&kp CAPS   &kp A         &kp S         &kp D   &kp F   &kp G                  &kp H   &kp J      &kp K          &kp L     &kp SEMI   &kp APOS   &kp KP_ENTER      &rgb_ug RGB_OFF
&kp LSHFT  &kp Z         &kp X         &kp C   &kp V   &kp B                  &kp N   &kp M      &kp COMMA      &kp DOT   &kp FSLH   &kp RSHFT  &kp UP_ARROW      &kp F3
&kp LCTRL  &kp LEFT_GUI  &kp LEFT_ALT  &mo 1           &kp SPACE                     &mo 1   &kp RIGHT_ALT  &kp RGUI  &kp RCTRL  &kp LEFT   &ext_power EP_ON  &ext_power EP_OFF
            >;
            
            label = "BASE";
        };

        layer_1 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans              &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans              &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans              &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans          &trans                      &trans  &trans  &trans  &trans  &trans  &trans  &trans
            >;
 
        };

        layer_2 {
            bindings = <
&trans  &trans  &trans  &trans  &trans  &trans  &trans      &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
&trans  &trans  &trans  &trans  &trans  &trans              &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans  &trans
